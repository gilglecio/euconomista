{% extends 'app/base.twig' %}

{% block pageTitle title %}

{% block app %}
    
    {% include 'macro.twig' with {error: error} %}

    <form class="form-horizontal" method="post" action="/app/support">

    	<div class="form-group">
    		<label for="subject" class="control-label col-xs-3">Assunto</label>
    		<div class="col-md-6 col-xs-9">
    			<input type="text" minlength="3" maxlength="60" id="subject" autofocus required name="subject" class="form-control">
    		</div>
    	</div>

    	<div class="form-group">
    		<label for="message" class="control-label col-xs-3">Mensagem</label>
    		<div class="col-md-6 col-xs-9">
    			<textarea rows="5" name="message" class="form-control"></textarea>
    		</div>
    	</div>

    	<div class="form-group no-margin-bottom">
    		<div class="col-xs-9 col-xs-offset-3">
    			<button class="btn btn-primary" type="submit">Enviar</button>

    			<a class="btn btn-link" href onclick="history.back()">Voltar</a>
    		</div>
    	</div>
    </form>

{% endblock %}