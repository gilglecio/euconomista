{% extends 'app/base.twig' %}

{% block pageTitle title %}

{% block app %}

    {% include 'macro.twig' with {messages: messages} %}

	    <form class="form-horizontal" method="post" action="/app/releases/{{ release_id }}/prorrogar">

    		<div class="form-group">
	    		<label for="date" class="control-label no-padding-right col-md-2 col-xs-4">Nova Data</label>
	    		<div class="col-md-4 col-xs-8">
	    			<input type="date" id="date" value="{{ date }}" autofocus required name="date" class="form-control">
	    		</div>
	    	</div>

	    	<div class="form-group">
	    		<label for="value" class="control-label no-padding-right col-xs-4 col-md-2">Novo Valor</label>
	    		<div class="col-md-4 col-xs-8">
	    			<input type="number" step="0.01" min="0.01" value="{{ value }}" max="99999999" id="value" required name="value" class="form-control">
	    		</div>
	    	</div>

	    	<div class="form-group no-margin-bottom">
	    		<div class="col-xs-12 col-md-offset-2 col-xs-offset-4">
	    			<button class="btn btn-primary" type="submit">Prorrogar</button>
	    			<a class="btn btn-link" href="javascript:history.go(-1)">Voltar</a>
	    		</div>
	    	</div>
	    </form>
    </div>

{% endblock %}