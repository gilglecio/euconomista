{% extends 'layouts/base.twig' %}

{% block navbar %}
    <li><a href="/app/releases">Lançamentos</a></li>
    <li><a href="/app/peoples">Pessoas</a></li>
    <li><a href="/app/categories">Categorias</a></li>
    <li><a href="/app/users">Usuários</a></li>
    <li><a href="/app/extract">Extrato</a></li>
    <li><a href="/app/logs">Logs</a></li>

    {% if user %}
    <li class="dropdown">
        <a href class="dropdown-toggle" id="btn-profile" data-toggle="dropdown">
            <strong>{{ user.first_name }}</strong>
            <b class="caret"></b>
        </a>
        
        <ul class="dropdown-menu">
            <li><a href="/app/account">Minha Conta</a></li>
            <li><a href="/app/support">Suporte</a></li>
            <li class="divider"></li>
            <li><a href="/logout">Sair</a></li>
