{% extends 'app/base.twig' %}

{% block pageTitle title %}

{% block app %}

    <style type="text/css">
    body {
        min-width: 500px
    }
    </style>

    <div class="row hidden-print" style="margin-bottom:20px">
        <div class="col-xs-12">
            <a id="print-table" class="btn btn-default pull-right" href onclick="print()"><i class="glyphicon glyphicon-print"></i></a>
        </div>
    </div>

    <h5 class="visible-print">{{ report_title }}</h5>

    <table class="table table-striped table-bordered no-margin-bottom">
    	<thead>
    		<tr>
                <th>Data</th>
                <th>Pessoa</th>
                <th>Descrição</th>
                <th class="text-right" style="min-width:100px">Valor R$</th>
                <th class="text-right" style="min-width:100px">Saldo R$</th>
    		</tr>
    	</thead>

    	<tbody>
    		{% for key, row in rows %}
    		<tr>
                <td>{{ row.date }}</td>
                <td>{{ row.people }}</td>
                <td>{{ row.desc }}</td>
                <td style="color:{{ row.color }}" class="text-right">{{ row.value }}</td>
                <td class="text-right">
                    {% if key + 1 == rows|length %}
                    <strong>{{ row.saldo }}</strong>
                    {% else %}
                    {{ row.saldo }}
                    {% endif %}
                </td>
    		</tr>
    		{% endfor %}

            {% if not rows|length %}
            <tr>
                <td colspan="5">Sem registros.</td>
            </tr>
            {% endif %}
    	</tbody>
    </table>

    <p class="visible-print pull-right" style="margin-top:10px">{{ report_footer }}</p>
{% endblock %}