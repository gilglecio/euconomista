    {% endif %}

{% endblock %}

{% block content %}
<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% block app %}{% endblock %}
            </div>
        </div>    
    </div>
</div>
{% endblock %}