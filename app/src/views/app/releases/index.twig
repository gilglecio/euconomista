{% extends 'app/base.twig' %}

{% block pageTitle title %}

{% block app %}
    <h2>{{ title }}</h2>

    <p><a href="/app/releases/form">Adicionar Lançamento</a></p>

    <table class="table">
    	<thead>
    		<tr>
    			<th>Vencimento</th>
    			<th>Número</th>
                <th>Categoria</th>
                <th>Pessoa</th>
                <th>Status</th>
    			<th class="text-right">Valor</th>
    		</tr>
    	</thead>

    	<tbody>
    		{% for row in rows %}
    		<tr>
                <td>{{ row.vencimento }}</td>
                <td>
                    <a href="/app/releases/{{ row.id }}/logs" style="color:#000; text-decoration:underline">{{ row.number }}</a>
                </td>
                <td>{{ row.category }}</td>
                <td>{{ row.people }}</td>
                
                <td style="{% if row.status == 'Vencido' %}font-weight:bold{% endif %}">
                    {{ row.status }}
                </td>
    			
                <td style="color:{{ row.color }}" class="text-right">{{ row.value }}</td>
    		</tr>
    		{% endfor %}

    		{% if not rows|length %}
            <tr>
                <td colspan="5">Sem registros.</td>
            </tr>
            {% endif %}
    	</tbody>
    </table>
{% endblock %}