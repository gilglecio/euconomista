{% extends 'app/base.twig' %}

{% block pageTitle title %}

{% block app %}
    <div class="row" style="margin-bottom:20px">
        <div class="col-xs-12">
            <a class="btn btn-default" href="/app/users/form">Adicionar</a>
        </div>
    </div>

    {% include 'macro.twig' with {messages: messages} %}

    <table class="table table-striped no-margin-bottom table-bordered">
    	<thead>
    		<tr>
    			<th>Nome</th>
                <th>Email</th>
    		</tr>
    	</thead>

    	<tbody>
    		{% for row in rows %}
    		<tr>
    			<td>{{ row.name }}</td>
    			<td>{{ row.email }}
                    <a class="pull-right table-row-btn" onnoclick="return confirm('Deseja realmente APAGAR \'{{ row.name }}\'?')" href="/app/users/{{ row.id }}/delete" style="color:red"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
    		</tr>
    		{% endfor %}

            {% if not rows|length %}
            <tr>
                <td colspan="5">Sem registros.</td>
            </tr>
            {% endif %}
    	</tbody>
    </table>
{% endblock %}