{% extends 'app/base.twig' %}

{% block pageTitle title %}

{% block app %}
    
    {% if data.id %}
    <ol class="breadcrumb">
        <li>Editando o usuário <strong>{{ data.name }}</strong></li>
    </ol>
    {% endif %}

    {% include 'macro.twig' with {error: error} %}

    <div class="jumbotron no-margin-bottom">
	    <form class="form-horizontal" method="post" action="/app/users">

	    	<fieldset>
	    		<legend>Usuário</legend>

	    		<input type="hidden" name="id" value="{{ data.id }}">

		    	<div class="form-group">
		    		<label for="name" class="control-label col-xs-3">Nome</label>
		    		<div class="col-xs-9">
		    			<input type="text" minlength="3" maxlength="60" id="name" autofocus required name="name" class="form-control">
		    		</div>
		    	</div>

		    	<div class="form-group">
		    		<label for="email" class="control-label col-xs-3">E-mail</label>
		    		<div class="col-xs-9">
		    			<input type="email" minlength="3" maxlength="60" id="email" autofocus required name="email" class="form-control">
		    		</div>
		    	</div>

		    	<div class="form-group">
		    		<label for="password" class="control-label col-xs-3">Senha</label>
		    		<div class="col-xs-9">
		    			<input type="password" minlength="3" maxlength="10" id="password" autofocus required name="password" class="form-control">
		    		</div>
		    	</div>
	    	</fieldset>

	    	<div class="form-group no-margin-bottom">
	    		<div class="col-xs-9 col-xs-offset-3">
	    			<button {% if data.id %}onclick="return confirm('Confirma a edição de \'{{ data.name }}\'?')"{% endif %} class="btn btn-primary" type="submit">Salvar</button>
	    		</div>
	    	</div>
	    </form>
    </div>

{% endblock %}