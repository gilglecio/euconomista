{% extends 'app/base.twig' %}

{% block pageTitle title %}

{% block app %}
    <h3>{{ title }}</h3>

    <ul>
        <li><a href="/app/categories/form">Adicionar Categoria</a></li>
    </ul>

    {% include 'macro.twig' with {error:error} %}

    <table class="table">
    	<thead>
    		<tr>
                <th>Nome</th>
    			<th width="25%"></th>
    		</tr>
    	</thead>

    	<tbody>
    		{% for row in rows %}
    		<tr>
                <td>{{ row.name }}</td>
    			<td>
                    <a onclick="return confirm('Deseja realmente APAGAR \'{{ row.name }}\'?')" href="/app/categories/{{ row.id }}/delete" style="color:red">Apagar</a>
                </td>
    		</tr>
    		{% endfor %}

            {% if not rows|length %}
            <tr>
                <td colspan="5">Sem registros.</td>
            </tr>
            {% endif %}
    	</tbody>
    </table>
{% endblock %}